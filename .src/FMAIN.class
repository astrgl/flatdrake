         ListpkgINSTALLATI.UnSelectAll
         Me.Mouse = Mouse.Wait 
         TABHIDE
         Btnclear_Click
         txtConsole.Visible = True
         Print #$hProcess, "flatpak uninstall " & spkg & gb.NewLine; ' & " | tee /dev/null " & User.Home & "/last.log"    
       Endif
    Endif
End


