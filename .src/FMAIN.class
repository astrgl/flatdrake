Public Sub Form_Close()
 If $CLOSEPASS = 0 Then
      Dim iAnswer As Integer = Message.Question("Do you really want to exit?", "Yes", "No")
  If (iAnswer = 1) Then
    $hProcess.Kill
    EXITROUTIN
   ' Me.Close
    Else
      BTNCLOSE.Enabled = True
      Stop Event
  Endif
 Else 
  $hProcess.Kill
  EXITROUTIN  
 Endif

End

